<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
        logicalFilePath="changelog-idle">

  <changeSet author="traccar" id="changelog-idle-1">

    <addColumn tableName="tc_devices">
      <column name="idlestate" type="BOOLEAN" defaultValueBoolean="false">
        <constraints nullable="true" />
      </column>
    </addColumn>

    <addColumn tableName="tc_devices">
      <column name="idlepositionid" type="BIGINT">
        <constraints nullable="true" />
      </column>
    </addColumn>

    <addColumn tableName="tc_devices">
      <column name="idletime" type="TIMESTAMP">
        <constraints nullable="true" />
      </column>
    </addColumn>

  </changeSet>

</databaseChangeLog>
